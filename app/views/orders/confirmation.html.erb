 <div class="row">
  <div class="col-lg-3 col-lg-offset-1" id="order_confirmation">
    <div class="order_id"><h3>Order #<%= @order.id %></h3></div>
    <div class="title"><h2><%= @order.activity.title %></h2></div>
    <div class="activity_owner_name"><%= @order.activity.user.name %></div>
    <div class="order_date"><%= @order.created_at.localtime.strftime("%F %I:%M %p") %></div>
    <div class="num_tickets"><%= @order.number_of_tickets %> Ticket(s)</div>
    <div class="total_price">Total price: $<%= @order.total_price %></div>
  </div>
</div>
